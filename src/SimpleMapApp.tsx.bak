// Simple working version of TrakkeApp with confirmed working map
import React, { useMemo } from 'react'
import { MapContainer, TileLayer } from 'react-leaflet'
import L from 'leaflet'
import 'leaflet/dist/leaflet.css'
import './App.css'

// Fix Leaflet default marker icons issue
delete (L.Icon.Default.prototype as unknown as Record<string, unknown>)._getIconUrl
L.Icon.Default.mergeOptions({
  iconRetinaUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/images/marker-icon-2x.png',
  iconUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/images/marker-icon.png',
  shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/images/marker-shadow.png',
})

export function SimpleMapApp() {
  // Generate unique key to prevent "Map container is already initialized" error
  const mapKey = useMemo(() => Math.random().toString(36), [])
  
  return (
    <div className="app">
      <div style={{
        backgroundColor: '#2c5530',
        color: 'white',
        padding: '20px',
        textAlign: 'center'
      }}>
        <h1>üèîÔ∏è Tr√•kke - Norwegian Outdoor Recreation</h1>
        <p>Interactive map showing hiking trails and outdoor spots in Norway</p>
      </div>
      
      <main className="app-main">
        <div 
          key={mapKey}
          style={{
            flex: 1,
            height: 'calc(100vh - 140px)',
            margin: '20px',
            border: '2px solid #2c5530',
            borderRadius: '8px',
            overflow: 'hidden'
          }}
        >
          <MapContainer
            center={[59.4, 7.4]}
            zoom={10}
            style={{ 
              width: '100%', 
              height: '100%'
            }}
          >
            <TileLayer
              attribution='&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
              url="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
            />
          </MapContainer>
        </div>
      </main>
      
      <div style={{
        padding: '20px',
        textAlign: 'center',
        backgroundColor: '#f8f9fa',
        fontSize: '14px',
        color: '#666'
      }}>
        ‚úÖ Working map! You can zoom and pan around the Norwegian terrain.
        <br />
        This confirms the Leaflet setup is working correctly.
      </div>
    </div>
  )
}

export default SimpleMapApp